bg-color = #e8f8ff

html
  overflow-y scroll

html, body
  background bg-color
  height 100%
  font-family 'Open Sans', sans-serif
  font-weight 300
  // background url(data:image/#pc svg+xml background -moz-radial-gradient(center, ellipse cover, #ffffff 0%, #e2f6ff 100%))
  background -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,#ffffff), color-stop(100%,bg-color))
  background -webkit-radial-gradient(center, ellipse cover,  #ffffff 0%,bg-color 100%)
  background -o-radial-gradient(center, ellipse cover,  #ffffff 0%,bg-color 100%)
  background -ms-radial-gradient(center, ellipse cover,  #ffffff 0%,bg-color 100%)
  background radial-gradient(ellipse at center,  #ffffff 0%,bg-color 100%)
  // filter progid:DXImageTransform.Microsoft.gradient(startColorstr, #ffffff, endColorstr #e2f6ff, GradientType=1)

h1,h2,h3,h4,h5,h6
  text-rendering optimizeLegibility

a
  text-decoration none
  color #006AAD
  &:hover
    color #A06535

#header
  width 80%
  min-width 960px
  margin 0 auto 10px
  padding-bottom 5px
  position relative
  h1
    font-size 23px
    color #A06535
    font-weight 400
    margin 0
    text-align center
    padding 0
    b
      font-weight 700
  h2
    font-size 13px
    color #666
    font-weight 300
    margin 0
    text-align center
    padding 0
    text-transform uppercase

#app
  margin 0 auto
  width 80%

.table
  margin 0 auto
  width 70%
  margin-bottom 0px

#contents
  width 100%
  max-width 960px
  margin 0 auto
  overflow hidden
  .description
    margin 20px 100px
    padding 10px
    color #111
    font-size 13px
    h5
      font-size 15px
      color #000
      font-weight 400
      margin 0
      text-align center
      padding 0
      text-transform uppercase

#footer
  width 600px
  margin 0 auto 10px
  padding-bottom 5px
  font-size 11px
  #licence
    font-size 10px
    width 380px
    margin 0 auto
    line-height 150%
    text-align center
    margin-top 20px
    padding-top 10px
    clear both
    div
      text-align left
    a
      &.cc
        float left
        margin-right 10px

.social
  text-align center
  font-size 23px
  width 110px
  height 23px
  &.social-top
    position absolute
    right 20px
    top 5px
    font-size 20px

#footer .social a,
.social-top a
  color #666
  background-color transparent
  width 19px
  height 20px
  float left
  margin 0 20px

.social-top
  a
    background-color transparent

#footer .social a:hover,
.social-top a:hover
  color #000

#footer .social a span,
.social-top a span
  display block
  font-size 10px
  font-weight normal
